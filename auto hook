import com.qualcomm.robotcore.hardware.DcMotor;
private DcMotor hook = null;
hook.setDirection(DcMotor.Direction.FORWARD);
if (gamepad1.y) {
                hook.setPower(1);
            }

            else if (gamepad1.a) {
                hook.setPower(-1);
            }

            else {
                hook.setPower(0);
            }
